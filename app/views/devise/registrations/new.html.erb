<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= form_input(resource, :email) %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= form_input(resource, :password) %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= form_input(resource, :password_confirmation) %>
      </div>
    </div>

    <div class="actions">
      <%= submit_button 'Sign up' %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
